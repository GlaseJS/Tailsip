{
  "exclude": [
    "build"
  ],
  "include": [
    "src/**/*.ts",
    "node_modules/tailsip/**/*.d.ts"
  ],
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "build",
    "rootDir": "src",
    "strict": true,

    "target": "ES2022",
    "lib": ["ES2022"],
    "skipLibCheck": true,

    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowArbitraryExtensions": true,

    "typeRoots": [
      "node_modules/tailsip/types"
    ]
  }
}